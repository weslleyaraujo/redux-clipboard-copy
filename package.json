{
  "name": "redux-clipboard-copy",
  "version": "1.0.3",
  "description": "Copy to clipboard using execCommand",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "files": [
    "dist",
    "lib",
    "es",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib dist es coverage",
    "prepare": "npm run clean && npm run build",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src/index.js --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src/index.js --out-dir es",
    "build:umd": "cross-env BABEL_ENV=es NODE_ENV=development rollup -c -i src/index.js -o dist/redux-clipboard-copy.js",
    "build:umd:min": "cross-env BABEL_ENV=es NODE_ENV=production rollup -c -i src/index.js -o dist/redux-clipboard-copy.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min"
  },
  "keywords": [
    "redux",
    "clipboard"
  ],
  "author": "Weslley Araujo <weslleyaraujo20@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "cross-env": "^5.1.1",
    "rollup": "^0.51.5",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify-es": "^3.1.9"
  },
  "dependencies": {
    "rimraf": "^2.6.2"
  }
}
